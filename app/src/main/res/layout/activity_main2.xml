<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryLightColor"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchIcon"
            style="@style/IconStyle"
            app:srcCompat="@drawable/loupe" />

        <ImageView
            android:id="@+id/profileIcon"
            style="@style/IconStyle"
            app:srcCompat="@drawable/profile" />

        <ImageView
            android:id="@+id/fileIcon"
            style="@style/IconStyle"
            app:srcCompat="@drawable/folder" />

        <ImageView
            android:id="@+id/SettingsIcon"
            style="@style/IconStyle"
            app:srcCompat="@drawable/settings" />

    </LinearLayout>

    <TextView
        android:id="@+id/Toptitle"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="@color/primaryDarkColor"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/firstName"
        style="@style/PlainTextCustom"
        android:layout_marginStart="1dp"
        android:layout_marginTop="250dp"
        android:hint="First Name"
        android:gravity="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lastName"
        style="@style/PlainTextCustom"
        android:layout_alignBottom="@id/firstName"
        android:layout_marginLeft="@dimen/leftMargin"
        android:layout_toRightOf="@id/firstName"
        android:hint="Last Name"
        android:gravity="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/birthday"
        style="@style/PlainTextCustom"
        android:layout_below="@id/email"
        android:layout_marginTop="@dimen/topMargin"
        android:hint="Birthday"
        android:gravity="center"
        android:inputType="date" />

    <EditText
        android:id="@+id/email"
        android:layout_width="1000dp"
        style="@style/PlainTextCustom"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_below="@id/firstName"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"/>

    <EditText
        android:id="@+id/phoneNumber"
        style="@style/PlainTextCustom"
        android:layout_below="@id/email"
        android:layout_alignTop="@id/birthday"
        android:layout_alignBottom="@id/birthday"
        android:layout_marginLeft="@dimen/leftMargin"
        android:layout_toRightOf="@id/birthday"
        android:hint="Phone Number"
        android:gravity="center"
        android:inputType="phone" />

    <EditText
        android:id="@+id/bio"
        style="@style/PlainTextCustom"
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:layout_below="@id/birthday"
        android:layout_marginTop="@dimen/topMargin"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Bio"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />


</RelativeLayout>